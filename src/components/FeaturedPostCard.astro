---
interface Props {
  title?: string;
  description?: string;
  color?: string;
  url?: string;
  date?: Date;
}

const { title, description, color, url, date }: Props = Astro.props;
---

<article slot="hero">
  <div
    class=` ${color ?? "bg-primary"} text-white w-full mx-auto px-[18px] pt-[126px] pb-[86px] md:px-[32px] md:pt-[166px] md:pb-[96px] md:lg:pt-[180px] lg:px[20px] lg:pb-[160px] xl:h-[95dvh]`
  >
    <!--* Card -->
    <div
      class="flex flex-col justify-center items-baseline px-6 max-w-full md:max-w-[70%] md:p-0  lg:max-w-[50%]"
    >
      <!--* Date -->
      <div class=" md:mb-3">
        <span class="text-transform: uppercase font-semibold text-xs"
          >Destacado •</span
        >
        <relative-time
          class="text-transform: uppercase font-semibold text-xs"
          format="datetime"
          datetime={date}
          format-style="short"
          year="numeric"
        >
        </relative-time>
      </div>
      <!--* Title -->
      <h1 class="mt-4 text-white text-3xl sm:text-4xl md:text-5xl">
        <a
          aria-label={title}
          class="no-underline hover:no-underline focus:no-underline"
          href={url}>{title}</a
        >
      </h1>
      <!--* Description -->
      <div class="mt-4">
        <span>{description}</span>
      </div>
      <!--* Read More Button -->
      <a
        aria-label="Read More"
        role="button"
        href={url}
        class="text-transform: uppercase text-base font-bold mt-8 md:mt-12 no-underline hover:no-underline focus:no-underline border-solid border-white border-opacity-50 border-2 px-3 pb-1 pt-2 md:px-5 md:pb-2 md:pt-3 rounded-lg"
      >
        Leer más
      </a>
    </div>
  </div>
</article>
