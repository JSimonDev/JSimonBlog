---
import { getLangFromUrl } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<div class="logo">
  <a 
  aria-label="jsimon blog"
  class="whitespace-nowrap inline-block" href={lang === 'es' ? '/' : `/${lang}/`}><span class="logo-name-span">JSimon</span> <span class="logo-blog-span">blog</span></a>
</div>