---
import Navigation from "@components/Navigation.astro";
import Hamburger from "@components/Hamburger.astro";
import MainSite from "@components/MainSite.astro";
import Logo from "@components/Logo.astro";
---

<header
  class="header absolute top-0 w-full flex justify-between text-white px-5 py-4 md:px-10 md:pt-8 lg:px-7 lg:py-8 "
>
  <div class="flex items-center w-full">
    <Logo />
    <nav class="flex items-center justify-end gap-4 w-full">
      <Navigation />
      <Hamburger />
      <MainSite/>
    </nav>
  </div>
</header>
